{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2021",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"],
    },
  },
  "include": ["./**/*", "../types", "../types/"],
  "exclude": ["node_modules", "dist"]
}
