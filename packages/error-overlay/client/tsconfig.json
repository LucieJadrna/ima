{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "typeRoots": ["../types", "../node_modules/@types"],
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"],
    },
  },
  "include": ["../types/", "../types", "./src", "./types", "./index"]
}
