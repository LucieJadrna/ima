{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "typeRoots": ["../types", "../node_modules/@types"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "#/*": [
        "src/*"
      ]
    },
    "strict": true,
    "target": "ES2021"
  },
  "include": [ "../types", "src", "types.ts"]
}
