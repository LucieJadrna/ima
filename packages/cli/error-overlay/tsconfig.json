{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "strict": true,
    "module": "CommonJS",
    "target": "ES2021",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"]
    }
  }
}
