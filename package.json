{
  "name": "ima",
  "bugs": {
    "url": "https://github.com/seznam/ima/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seznam/ima.git"
  },
  "license": "MIT",
  "author": "Miroslav Jancarik <miroslav.jancarik@firma.seznam.cz>",
  "workspaces": [
    "./packages/cli",
    "./packages/core",
    "./packages/create-ima-app",
    "./packages/dev-utils",
    "./packages/devtool-scripts",
    "./packages/error-overlay",
    "./packages/helpers",
    "./packages/hmr-client",
    "./packages/server"
  ],
  "scripts": {
    "postinstall": "npm install --prefix ./packages/devtools && if ! $CI; then lerna run prepare; fi",
    "benchmark": "utils/benchmark/benchmark.sh",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "doc": "gulp doc",
    "lint": "npm run lint:cmd -- './**/*.{js,jsx,ts,tsx}'",
    "lint:cmd": "eslint -c ./.eslintrc.js",
    "lint:fix": "npm run lint -- --fix",
    "release": "lerna version --force-publish create-ima-app",
    "release:devtools": "npm run publish-webstore --prefix ./packages/devtools",
    "release:graduate": "npm run release -- --conventional-graduate",
    "release:next": "npm run release -- prerelease",
    "release:next:init": "lerna version premajor --force-publish",
    "release:publish": "lerna publish from-git --yes",
    "stylelint": "stylelint './**/*.less'",
    "stylelint:fix": "npm run stylelint -- --fix",
    "test": "lerna run test && npm run --prefix ./packages/devtools test",
    "version": "npm run doc && node utils/version/create-ima-app-versions.js && git add docs packages/create-ima-app/template/package.json"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx}": "npm run lint:cmd"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-react": "7.16.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@fortawesome/fontawesome-free": "5.12.1",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/node": "^17.0.21",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "autocannon": "^7.7.1",
    "bulma": "0.8.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commitizen": "^4.2.4",
    "del": "5.1.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "fs-extra": "8.1.0",
    "git-cz": "^4.8.0",
    "gulp": "4.0.2",
    "gulp-change": "1.0.2",
    "gulp-rename": "2.0.0",
    "husky": "4.2.3",
    "jest": "^26.6.3",
    "jsdoc-to-markdown": "5.0.3",
    "jsdom": "16.4.0",
    "lerna": "^4.0.0",
    "lint-staged": "10.0.8",
    "lunr": "^2.3.9",
    "map-stream": "0.0.7",
    "postcss": "^8.4.12",
    "postcss-less": "6.0.0",
    "prettier": "^2.6.0",
    "rollup": "^2.70.1",
    "stylelint": "^14.6.0",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-order": "5.0.0",
    "to-mock": "1.6.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.2",
    "verdaccio": "^5.8.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  }
}
