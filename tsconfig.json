{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "outDir": "dist",
    "declaration": true,
    "noEmitOnError": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
